# Python backend for Fly.io (civilian-drone-app = API only; frontend on Cloudflare)
FROM python:3.11-slim

WORKDIR /app

# Install deps (slim list for faster builds)
COPY requirements-backend.txt ./
RUN pip install --no-cache-dir -r requirements-backend.txt

# App code (server + modules)
COPY src ./src

WORKDIR /app/src
EXPOSE 8000
CMD ["uvicorn", "ground_control_station.server:app", "--host", "0.0.0.0", "--port", "8000"]
